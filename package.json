{
  "name": "price-tracker",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build": "pnpm run -r --if-present build",
    "watch": "pnpm run --parallel -r --if-present watch",
    "compose": "docker compose watch",
    "start": "npx run-p compose watch"
  },
  "devDependencies": {
    "eslint": "8.56.0",
    "prettier": "^3.1.0",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "pnpm" : "8.9.0"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "npm-run-all": "4.1.5"
  }
}
